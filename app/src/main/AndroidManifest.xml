<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nachiket.connectra">


    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.nachiket.connectra.model.MyApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_home"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_home_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Connectra"
        tools:targetApi="34">

        <!-- Metadata for Google services -->
        <meta-data
            android:name="com.google.android.gms.client_id"
            android:value="404492716071-h47f0h8m4kmqni2a2jst09kupcisolm0.apps.googleusercontent.com" />

        <!-- Activities -->
        <activity
            android:name="com.nachiket.connectra.ExtraDetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.nachiket.connectra.ShowProfileImage"
            android:exported="false" />
        <activity
            android:name="com.nachiket.connectra.ChatActivity"
            android:exported="false" />
        <activity
            android:name="com.nachiket.connectra.RecyclerProfileMainActivity"
            android:exported="false" />
        <activity
            android:name="com.nachiket.connectra.ChangeSkillActivity"
            android:exported="false" />
        <activity
            android:name="com.nachiket.connectra.Authentication.ForgotPassword"
            android:exported="false" />
        <activity
            android:name="com.nachiket.connectra.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.nachiket.connectra.Authentication.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Connectra" />

        <!-- Launcher Activity -->
        <activity
            android:name="com.nachiket.connectra.Authentication.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
