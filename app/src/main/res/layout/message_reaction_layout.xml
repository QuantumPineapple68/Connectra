<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/reaction_background"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/reaction_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤️"
        android:textSize="20sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/reaction_laugh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="😂"
        android:textSize="20sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/reaction_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="👍"
        android:textSize="20sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/reaction_wow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="😮"
        android:textSize="20sp"
        android:padding="8dp"/>
</LinearLayout>